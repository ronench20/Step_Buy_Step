<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leaderboard_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/leaderboard_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="80dp">

        <LinearLayout
            android:id="@+id/leaderboard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header (gradient) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header_bg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_leaderboard_header_gradient"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Back (absolute left-4 top-6) -->
                <LinearLayout
                    android:id="@+id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/bg_back_pill"
                    android:gravity="center_vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="12dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ic_back"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/back"
                        app:srcCompat="@drawable/ic_arrow_left_24"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Back"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Leaderboard"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Compete with your group"
                    android:textSize="14sp"
                    android:textColor="#CCFFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Your Rank card (show/hide in code) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_your_rank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="false"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:background="@drawable/bg_rank_frost"
                        android:foreground="@drawable/border_white_200">

                        <TextView
                            android:id="@+id/tv_your_rank_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your Rank"
                            android:textSize="12sp"
                            android:textColor="#CCFFFFFF" />

                        <TextView
                            android:id="@+id/tv_your_rank_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="#1"
                            android:textSize="24sp"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- List content padding (p-4 space-y-3) -->
            <LinearLayout
                android:id="@+id/list_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Empty state card (toggle visibility with list) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_card_default">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_empty_trophy"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/trophy"
                            app:srcCompat="@drawable/ic_trophy_24"
                            android:alpha="0.5"
                            android:tint="#6B7280" />

                        <TextView
                            android:id="@+id/tv_empty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="No athletes in your group yet"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- RecyclerView for athletes (space-y-3) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_athletes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:overScrollMode="never"
                    tools:listitem="@layout/item_leaderboard_athlete" />

            </LinearLayout>

            <!-- Info Card (p-4) -->
            <LinearLayout
                android:id="@+id/info_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F3E8FF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:background="@drawable/border_purple_200">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_info_trophy"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@string/trophy"
                            app:srcCompat="@drawable/ic_trophy_24"
                            android:tint="#7C3AED" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_info_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ranking System"
                                android:textSize="12sp"
                                android:textColor="#111827"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_info_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Rankings are based on your shoe level and collection. Upgrade your shoes to climb the leaderboard!"
                                android:textSize="14sp"
                                android:textColor="#6B7280" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Back Button card (p-4) -->
            <LinearLayout
                android:id="@+id/back_card_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_back_to_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="0dp"
                    android:backgroundTint="#F3F4F6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:background="@drawable/border_gray_200">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ic_back_card"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:contentDescription="@string/back"
                            app:srcCompat="@drawable/ic_arrow_left_24"
                            android:tint="#4B5563" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_back_card_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Back to Dashboard"
                                android:textSize="12sp"
                                android:textColor="#111827"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_back_card_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Return to your dashboard to view more information."
                                android:textSize="14sp"
                                android:textColor="#6B7280" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>