<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Shoe"
        android:textSize="18sp"
        android:textColor="#111827"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvDialogDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm your upgrade to unlock higher earning potential"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:layout_marginBottom="16dp"/>

    <!-- Center card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#F3F4F6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_footprints"
                android:tint="#007AFF"
                android:contentDescription="@string/shoe"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvSelectedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoe Name"
                android:textSize="16sp"
                android:textColor="#111827"/>

            <TextView
                android:id="@+id/tvSelectedLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                android:textSize="12sp"
                android:textColor="#6B7280"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Multiplier:"
                android:textSize="12sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvDialogMultiplier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2x"
                android:textSize="12sp"
                android:textColor="#34C759"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cost:"
                android:textSize="12sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvDialogCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 shoe size"
                android:textSize="12sp"
                android:textColor="#111827"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Remaining:"
                android:textSize="12sp"
                android:textColor="#6B7280"/>

            <TextView
                android:id="@+id/tvDialogRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 shoe size"
                android:textSize="12sp"
                android:textColor="#111827"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Warning box -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFF7ED"
        app:strokeColor="#FED7AA"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tvWarningText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="⚠️ Your current 10 shoe size will reset to 5 after this upgrade."
            android:textSize="12sp"
            android:textColor="#7C2D12"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Confirm Upgrade"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:backgroundTint="#007AFF"/>
    </LinearLayout>

</LinearLayout>